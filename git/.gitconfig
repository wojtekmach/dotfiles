[user]
  name = Wojtek Mach
  email = wojtek@wojtekmach.pl
[github]
  user = wojtekmach
[core]
  editor = vim
  excludesfile = /Users/wojtek/.gitignore_global
  autocrlf = input
  ; pager = delta
  ; hooksPath = /Users/wojtek/.git_template/hooks
[init]
  ; templatedir = ~/.git_template
  defaultBranch = main
[color]
  ui = auto
[diff]
  indentHeuristic = true
  colorMoved = default
[merge]
  tool = vimdiff
  conflictstyle = diff3
[rebase]
  autosquash = true
[delta]
  navigate = true
[url "git://github.com/"]
  insteadOf = gh:
[url "git@github.com:"]
  insteadOf = https://github.com/
[commit]
  verbose = true
[pull]
  ff = only
[push]
  ; default = simple
  default = current
[checkout]
  defaultRemote = origin
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[credential]
  helper = osxkeychain
[web]
  browser = open
[alias]
  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "log --oneline"
  la = !git l --all
