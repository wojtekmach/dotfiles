#!/bin/bash
set -ex

if [[ -z "$1" ]]; then
  set -- "-a"
fi

export ERLC_USE_SERVER=true
export MAKEFLAGS="-j$(getconf _NPROCESSORS_ONLN)"

if [ -z "$1" ]; then
  set -- "-a"
fi

time ./otp_build all $@

if [ "$1" = "-a" ]; then
  make release_docs -j8 DOC_TARGETS="chunks"
fi

cd release/*
./Install -sasl $PWD
