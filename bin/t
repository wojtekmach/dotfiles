#!/bin/bash

if [ -f "$PWD/tmp/t" ]; then
  $PWD/tmp/t $@
else
  if [ -d $PWD/spec ]; then
    framework=rspec
  else
    framework=minitest

    if [ "$@" ]; then
      files=$@
    else
      files="test/**/*_test.rb"
    fi
  fi

  if [ -S .zeus.sock ]; then
    zeus test $@
  elif [ -d tmp/spring ]; then
    if [ $framework == rspec ]; then
      spring rspec $@
    else
      spring testunit $files
    fi
  else
    if [ $framework == rspec ]; then
      rspec $@
    else
      ruby -Ilib -Itest $files
    fi
  fi
fi
